<odoo>
    <record id="view_visit_list" model="ir.ui.view">
        <field name="name">hospital.visit.list</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="disease_id"/>
                <field name="visit_date"/>
            </list>
        </field>
    </record>

    <record id="view_visit_form" model="ir.ui.view">
        <field name="name">hospital.visit.form</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="disease_id"/>
                        <field name="visit_date"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
