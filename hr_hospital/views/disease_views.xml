<odoo>
    <record id="view_disease_list" model="ir.ui.view">
        <field name="name">hospital.disease.list</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_disease_form" model="ir.ui.view">
        <field name="name">hospital.disease.form</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
